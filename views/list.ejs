<%- include("header") %>

    <div class="box" id="heading">
        <h1>
            <%= listTitle%>
        </h1>
    </div>

    <div class="box">

        <% docItems.forEach(element=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkBox" value="<%=element._id%>" onchange="this.form.submit()">
                    <p><%= element.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
            </form>
            <% }) %>

                <form class="item" action="/" method="POST">
                    <input type="text" name="newItem" placeholder="Add new item">
                    <button type="submit" name="btnSubmit" value=<%=listTitle%> >+</button>
                </form>

    </div>

    <%- include("footer") %>